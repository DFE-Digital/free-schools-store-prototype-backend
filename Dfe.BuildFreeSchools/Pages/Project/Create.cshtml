@page
@model Dfe.BuildFreeSchools.Pages.Project.CreateProjectModel
@{
}


<div class="text-center">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h2 class="govuk-heading-l govuk-!-margin-bottom-2">Create Project</h2>
            <div class="app-task-list">
                <form class="govuk-form-group" method="POST" action="#">
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="project-id">Project ID</label>
                        <input asp-for="ProjectID" class="govuk-input" id="project-id" name="project_id" type="text" maxlength="100" required>
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="school-name">School Name</label>
                        <input asp-for="CurrentFreeSchoolName" class ="govuk-input" id="school-name" name="school_name" type="text" maxlength="100" required>
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="application-number">Application Number</label>
                        <input asp-for="FreeSchoolsApplicationNumber" class ="govuk-input" id="application-number" name="application_number" type="text" maxlength="100" required>
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="application-wave">Application Wave</label>
                        <input asp-for="FreeSchoolApplicationWave" class="govuk-input" id="application-wave" name="application_wave" type="text" maxlength="100" required>
                    </div>
                    <div class="govuk-button-group">
                        <button data-prevent-double-click="true"
                                class="govuk-button govuk-!-margin-top-6"
                                data-module="govuk-button"
                                role="button"
                                id="continue"
                                name="action"
                                value="continue">
                            Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
